<!--https://www.redblobgames.com/grids/hexagons/implementation.html-->
<AnimatedContainer class="gameboard">
  <section>
    <div class="hexwrapper">
      <figure>
        <canvas {{did-insert (action this.setupGameCanvas)}} id="gamecanvas" width="550" height="580"
                onClick={{action "hexReport" "gamecanvas-flat"}}
                onMouseMove={{action "hexMouseMove"}}
        ></canvas>
      </figure>
      {{#if this.transport.ships}}
        <Ship
          @ships={{this.transport.ships}}
          @hexLayout={{this.mapService.currentLayout}}
          @q={{this.transport.shipHex.q}}
          @r={{this.transport.shipHex.r}}
          @s={{this.transport.shipHex.s}}
          @hex={{this.transport.hipHex}}
          @point={{this.transport.shipPoint}}
          @mapCenterX={{this.gameboard.centerX}}
          @mapCenterY={{this.gameboard.centerY}}
        />
      {{/if}}
    </div>
  </section>
</AnimatedContainer>
<div>
  Mouse X:Y{{input value=mouseXY}}
</div>
<div>
  Mouse Hex: {{input value=currentHex}} Path Distance: {{pathDistanceToMouseHex}}
</div>
<div>
  Ship: {{this.transport.shipHex.q}} {{this.transport.shipHex.r}} {{this.transport.shipHex.s}}
</div>
<div>
  Rect centers: {{this.gameboard.centerX}} : {{this.gameboard.centerY}}
</div>
<div>
  <button {{action "toggleTiles"}}>Toggle Tiles</button>
  <button {{action "findPath"}}>Find Path</button>
</div>
<div>
  Move ship on click: {{input type="checkbox" name="moveShipOnClick" checked=this.moveShipOnClick}}
</div>
<div>
  [{{#if this.tilesLoaded}}tiles loaded{{/if}}]
</div>
